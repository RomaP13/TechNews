@using TechNews.Models
@model PaginatedList<TechNews.Models.Post>

@{
    ViewData["Title"] = "Головна";
    var categories = ViewData["Categories"] as List<TechNews.Models.Category>;
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentCategory = ViewData["CurrentCategory"] as int?;
    
    // Підрахунок для відображення
    bool isSearching = !string.IsNullOrEmpty(currentFilter) || (currentCategory.HasValue && currentCategory > 0);
}

<div class="bg-dark text-white p-5 mb-5 rounded shadow post-hero-header" 
     style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=2070&auto=format&fit=crop') no-repeat center center; background-size: cover;">
    <div class="container py-5">
        <h1 class="display-3 fw-bold">TechNews</h1>
        <p class="lead mb-4">Твій надійний провідник у світі майбутнього. ШІ, .NET, Гаджети та інше.</p>
        <a href="#news-feed" class="btn btn-primary btn-lg px-4 shadow-sm">Читати останні новини</a>
    </div>
</div>

<div id="news-feed" class="container px-0">
    <div class="row mb-4">
        <div class="col-md-10 mx-auto">
            <form asp-action="Index" method="get" class="card p-4 shadow-sm border-0 bg-white">
                <div class="input-group input-group-lg">
                    <select name="categoryId" class="form-select border-secondary" style="max-width: 250px;">
                        <option value="">Всі категорії</option>
                        @if (categories != null)
                        {
                            foreach (var cat in categories)
                            {
                                if (currentCategory == cat.Id)
                                {
                                    <option value="@cat.Id" selected>@cat.Name</option>
                                }
                                else
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            }
                        }
                    </select>

                    <input type="text" name="searchString" value="@currentFilter" class="form-control border-secondary" placeholder="Введіть ключові слова...">
                    
                    <button type="submit" class="btn btn-dark px-4 text-uppercase fw-bold">
                        <i class="bi bi-search"></i> Знайти
                    </button>
                    
                    @if (isSearching)
                    {
                        <a asp-action="Index" class="btn btn-outline-danger px-3" title="Скинути фільтри">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (isSearching)
    {
        <div class="row mb-4">
            <div class="col-md-10 mx-auto">
                <div class="alert alert-light border shadow-sm d-flex justify-content-between align-items-center">
                    <span>
                        Результати пошуку: знайдено <strong>@Model.Count</strong> новин на цій сторінці.
                    </span>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="text-muted mb-3" style="font-size: 3rem;"><i class="bi bi-search"></i></div>
                <h3 class="fw-light">На жаль, нічого не знайдено.</h3>
                <p class="text-muted">Спробуйте змінити запит або обрати іншу категорію.</p>
                <a asp-action="Index" class="btn btn-primary mt-2">Показати всі новини</a>
            </div>
        }
        else
        {
            @foreach (var post in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 220px; overflow: hidden; position: relative;">
                            <span class="badge bg-primary position-absolute top-0 start-0 m-3 shadow-sm">@post.Category?.Name</span>
                            
                            <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title" style="height: 100%; width: 100%; object-fit: cover; transition: transform 0.3s;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2 text-muted small">
                                <i class="bi bi-calendar3"></i> @post.CreatedAt.ToString("dd MMMM yyyy")
                            </div>
                            <h5 class="card-title fw-bold text-dark">
                                <a asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-dark stretched-link">@post.Title</a>
                            </h5>
                            <p class="card-text text-secondary flex-grow-1">@post.ShortDescription</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                <small class="text-muted fw-bold">
                                    <i class="bi bi-person-circle text-primary"></i> 
                                    @( (post.AuthorEmail ?? "").Contains("@") ? post.AuthorEmail!.Split('@')[0] : (post.AuthorEmail ?? "Редакція") )
                                </small>
                                <span class="text-primary small fw-bold">Читати далі &rarr;</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5 mb-5">
            <nav>
                <ul class="pagination pagination-lg">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@currentFilter"
                           asp-route-categoryId="@currentCategory"
                           class="page-link shadow-sm rounded-pill me-2 border-0 text-dark">
                           &larr; Назад
                        </a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link border-0 bg-transparent text-muted fw-bold">
                            @Model.PageIndex / @Model.TotalPages
                        </span>
                    </li>

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@currentFilter"
                           asp-route-categoryId="@currentCategory"
                           class="page-link shadow-sm rounded-pill ms-2 border-0 text-dark">
                           Вперед &rarr;
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
