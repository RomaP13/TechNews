@model IEnumerable<TechNews.Models.Post>

@{
    ViewData["Title"] = "Керування новинами";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-uppercase fw-bold ls-2">Керування новинами</h1>
            <p class="text-muted">Адміністрування контенту порталу</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> + Створити новину
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr class="text-uppercase small">
                        <th class="py-3 ps-4">Зображення</th>
                        <th class="py-3">Заголовок</th>
                        <th class="py-3">Категорія</th>
                        <th class="py-3">Дата</th>
                        <th class="py-3">Автор</th>
                        <th class="py-3 text-end pe-4">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4" style="width: 120px;">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <div class="rounded overflow-hidden shadow-sm" style="width: 100px; height: 60px;">
                                        <img src="@item.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted border" style="width: 100px; height: 60px;">
                                        <small>No IMG</small>
                                    </div>
                                }
                            </td>
                            <td class="fw-bold text-dark">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                <span class="badge rounded-pill bg-info text-dark text-uppercase px-3 py-2">
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </span>
                            </td>
                            <td class="text-muted small">
                                @item.CreatedAt.ToString("dd.MM.yyyy")
                            </td>
                            <td class="text-muted small">
                                @item.AuthorEmail
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm px-3">
                                        Редагувати
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm px-3">
                                        Видалити
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
